.indexContainer .header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 20rpx 0;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.indexContainer .header image {
  width: 140rpx;
  height: 40rpx;
  margin: 0 20rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
}
.indexContainer .header .search {
  height: 60rpx;
  width: 100%;
  position: relative;
  background-color: #eee;
  border-radius: 10rpx;
  padding-left: 70rpx;
}
.indexContainer .header .search .iconfont {
  position: absolute;
  left: 20rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.indexContainer .header .search input {
  height: 60rpx;
}
.indexContainer .header .search input .placeholder {
  font-size: 24rpx;
  text-align: center;
  text-indent: -50rpx;
}
.indexContainer .header button {
  height: 60rpx;
  font-size: 26rpx;
  margin: 0 20rpx;
  width: 140rpx;
  text-align: center;
  line-height: 60rpx;
  color: #bb2c08;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
}
.indexContainer .navBar {
  height: 80rpx;
  white-space: nowrap;
}
.indexContainer .navBar .navItem {
  display: inline-block;
  width: 140rpx;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
  box-sizing: border-box;
}
.indexContainer .navBar .navItem.active {
  border-bottom: #f00 solid 2rpx;
}

