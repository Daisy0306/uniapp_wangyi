.indexContainer .header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 20rpx 0;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.indexContainer .header image {
  width: 140rpx;
  height: 40rpx;
  margin: 0 20rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
}
.indexContainer .header .search {
  height: 60rpx;
  width: 100%;
  position: relative;
  background-color: #eee;
  border-radius: 10rpx;
  padding-left: 70rpx;
}
.indexContainer .header .search .iconfont {
  position: absolute;
  left: 20rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.indexContainer .header .search input {
  height: 60rpx;
}
.indexContainer .header .search input .placeholder {
  font-size: 24rpx;
  text-align: center;
  text-indent: -50rpx;
}
.indexContainer .header button {
  height: 60rpx;
  font-size: 26rpx;
  margin: 0 20rpx;
  width: 140rpx;
  text-align: center;
  line-height: 60rpx;
  color: #bb2c08;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
}
.indexContainer .navBar {
  height: 70rpx;
  white-space: nowrap;
  font-size: 0;
}
.indexContainer .navBar .navItem {
  display: inline-block;
  height: 100%;
  box-sizing: border-box;
  padding: 10rpx 10rpx;
  margin: 0 20rpx;
  font-size: 28rpx;
}
.indexContainer .navBar .navItem.active {
  border-bottom: #f00 solid 2rpx;
}
.indexContainer .slideshow {
  width: 100%;
  height: 370rpx;
}
.indexContainer .slideshow .slideItem {
  width: 100%;
}
.indexContainer .slideshow .slideItem image {
  width: 100%;
  height: 370rpx;
  display: block;
}
.indexContainer .hotGoods {
  width: 100%;
  text-align: center;
}
.indexContainer .hotGoods .title {
  font-size: 34rpx;
  margin: 15rpx 0;
}
.indexContainer .hotGoods .desc {
  font-size: 24rpx;
  color: #999;
}
.indexContainer .hotGoods .goodsWrapper {
  width: 100%;
}
.indexContainer .hotGoods .goodsWrapper .goodsLine {
  padding: 8rpx 15rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.indexContainer .hotGoods .goodsWrapper .goodsItem {
  width: 345rpx;
  text-align: left;
  font-size: 28rpx;
  line-height: 45rpx;
  vertical-align: top;
}
.indexContainer .hotGoods .goodsWrapper .goodsItem image {
  width: 345rpx;
  height: 345rpx;
}
.indexContainer .hotGoods .goodsWrapper .goodsItem .price {
  color: #f00;
  font-weight: bold;
}
.indexContainer .hotGoods .goodsWrapper .goodsItem .price text {
  margin-left: 10rpx;
}

